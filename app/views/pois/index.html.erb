<p id="notice"><%= notice %></p>

<h1>Listing Pois</h1>

  <%= form_tag pois_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search], id: "search-bar" %>
    <%= submit_tag("Search")%>
  <% end %>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Instructor</th>
      <th>Time</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pois.each do |poi| %>
      <tr>
        <td class="poi-subj" value="<%= poi.subj %>"><%= poi.subj %></td>
        <td><%= poi.instruc %></td>
        <td><%= poi.tm %></td>
        <td><%= poi.rm %></td>
        <td><button type="button" class="btn btn-default add">Add</button></td>
        <td><%= link_to 'Show', poi %></td>
        <td><%= link_to 'Edit', edit_poi_path(poi) %></td>
        <td><%= link_to 'Destroy', poi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poi', new_poi_path %>
