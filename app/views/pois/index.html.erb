<div class="container center">
  <!-- Trigger the modal with a button -->




  <div class="btn-group btn-group-justified" role="group" aria-label="...">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default btn-primary" data-toggle="modal" data-target="#myModal">Add Course</button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="jscolor {onFineChange:'update(this)'} btn btn-default"></button>
  </div>
