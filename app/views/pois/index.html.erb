  <!-- <input class="jscolor {onFineChange:'update(this)'} btn btn-primary btn-lg"></input>
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add Course</button> -->
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Search</h4>
        </div>
        <div class="modal-body">
          <!-- <p>This is a large modal.</p> -->
          <%= form_tag pois_path, :method => 'get' do %>
            <%= text_field_tag :search, params[:search], id: "search-bar" %>
            <%= submit_tag("Search")%>
          <% end %>

          <div class="panel panel-default">
          <!-- Default panel contents -->
            <div class="panel-heading">Panel heading</div>
          <!-- Table -->
            <table class="table">
              <thead>
                <tr>
                  <th>Subject</th>
                  <th>Instructor</th>
                  <th>Time</th>
                  <th>Room</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @pois.each do |poi| %>
                  <tr>
                    <td class="poi-subj" value="<%= poi.subj %>"> <%= poi.subj %> </td>
                    <td><%= poi.instruc %></td>
                    <td class="poi-time" value="<%= poi.tm%>"> <%= poi.tm %> </td>
                    <td><%= poi.rm %></td>
                    <td><button type="button" class="btn btn-default add" data-dismiss="modal">Add</button></td>
                    <!-- <td><%= link_to 'Show', poi %></td>
                    <td><%= link_to 'Edit', edit_poi_path(poi) %></td>
                    <td><%= link_to 'Destroy', poi, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
